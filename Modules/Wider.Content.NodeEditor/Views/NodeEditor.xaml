<UserControl 
    x:Class="Wider.Content.NodeEditor.Views.NodeEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vc="clr-namespace:Wider.Content.VirtualCanvas.Controls;assembly=Wider.Content.VirtualCanvas"
    >
    <UserControl.InputBindings>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedNodesCommand}" />
    </UserControl.InputBindings>
    <ScrollViewer 
        HorizontalScrollBarVisibility="Auto" 
        VerticalScrollBarVisibility="Auto" 
        CanContentScroll="True">
        <vc:VirtualCanvas x:Name="Graph">
            <vc:VirtualCanvas.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="New Node" Command="{Binding NewNodeCommand}"/>
                </ContextMenu>
            </vc:VirtualCanvas.ContextMenu>
        </vc:VirtualCanvas>
    </ScrollViewer>
</UserControl>
