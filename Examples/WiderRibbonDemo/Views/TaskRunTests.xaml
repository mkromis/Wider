<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"             
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    x:Class="WiderRibbonDemo.Views.TaskRunTests"             
    mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="278.667">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="247*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40.667"/>
            <RowDefinition Height="29.333"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Column="1" Grid.Row="1" Value="{Binding Progress}" Maximum="1"/>
        <Button Grid.Column="1" Grid.Row="2" Command="{Binding StartRun}" Width="50" Content="Start"/>

    </Grid>
</UserControl>
