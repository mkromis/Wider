<UserControl 
    x:Class="WiderRibbonDemo.Views.MainRibbon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:WiderRibbonDemo.Views"
    xmlns:fluent="urn:fluent-ribbon"
    mc:Ignorable="d" d:DesignWidth="800" Height="124.822">
    <fluent:Ribbon>
        <fluent:RibbonTabItem Header="Samples">
            <fluent:RibbonGroupBox Header="Simple Samples">
                <fluent:Button Header="Text Sample" Icon="pack://application:,,,/WiderRibbonDemo;component/Resources/note3.png" Size="Middle" Command="{Binding OpenTextSample}"/>
            </fluent:RibbonGroupBox>
        </fluent:RibbonTabItem>
    </fluent:Ribbon>
</UserControl>
