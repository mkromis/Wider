<UserControl 
    x:Class="WiderRibbonDemo.Views.MainRibbon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:WiderRibbonDemo.Views"
    xmlns:fluent="urn:fluent-ribbon"
    mc:Ignorable="d" d:DesignWidth="800" Height="124.822">
    <fluent:Ribbon>
        <fluent:Ribbon.ContextualGroups>
            <fluent:RibbonContextualTabGroup 
                x:Name="canvasGroup" Header="Virtual Canvas" Visibility="Visible" Background="Green" BorderBrush="Green">
            </fluent:RibbonContextualTabGroup>
        </fluent:Ribbon.ContextualGroups>
        
        <fluent:RibbonTabItem Header="Samples">
            <fluent:RibbonGroupBox Header="Content ">
                <fluent:Button Header="Virtual Content" Size="Middle" Command="{Binding OpenCanvasCommand}"/>
            </fluent:RibbonGroupBox>
        </fluent:RibbonTabItem>
        <fluent:RibbonTabItem Header="Canvas" Group="{Binding Source={x:Reference canvasGroup}}" Visibility="{Binding CanvasVisibility}">
            <fluent:RibbonGroupBox Header="2">
                <fluent:Button Header="3" />
            </fluent:RibbonGroupBox>
        </fluent:RibbonTabItem>
    </fluent:Ribbon>
</UserControl>
